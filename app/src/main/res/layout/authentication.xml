<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:elevation="10dp"
        android:padding="170dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="application icon"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gmail_icon" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginBottom="-10dp"
        app:cardBackgroundColor="@color/materialCardViewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!--  Login Scroll View  -->

        <ScrollView
            android:id="@+id/loginScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="30dp">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="350dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:tooltipText="Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:width="130dp"
                        android:background="@color/materialCardViewColor"
                        android:gravity="center_horizontal"
                        android:text="Log in or sign up"
                        android:textColor="@color/textViewColor"
                        android:textSize="15sp" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/countryCodePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        app:ccpDialog_backgroundColor="@color/materialCardViewColor"
                        app:ccpDialog_textColor="@color/textViewColor"
                        app:ccp_arrowColor="@color/textViewColor"
                        app:ccp_showNameCode="false"
                        app:ccp_showPhoneCode="false" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/userEmailLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:startIconDrawable="@drawable/mobile_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPhoneNumber"
                            android:layout_width="275dp"
                            android:layout_height="wrap_content"
                            android:hint="Enter Phone Number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/buttonVerifyPhoneNumber"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:outlineAmbientShadowColor="@color/textViewColor"
                    android:outlineSpotShadowColor="@color/textViewColor"
                    android:text="Continue"
                    android:textColor="@color/white" />

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="30dp">

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="350dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center_vertical"
                        android:tooltipText="Text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:width="35dp"
                        android:background="@color/materialCardViewColor"
                        android:gravity="center_horizontal"
                        android:text="or"
                        android:textColor="@color/textViewColor"
                        android:textSize="15sp" />

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/buttonGoogleLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="25dp"
                        android:outlineAmbientShadowColor="@color/textViewColor"
                        android:outlineSpotShadowColor="@color/textViewColor"
                        app:icon="@drawable/google_icon"
                        app:iconTint="@null" />

                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="25dp"
                        android:outlineAmbientShadowColor="@color/textViewColor"
                        android:outlineSpotShadowColor="@color/textViewColor"
                        app:icon="@drawable/gmail_icon"
                        app:iconTint="@null" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!--  OTP Scroll View  -->
        <ScrollView
            android:id="@+id/OTPScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textViewColor"
                android:text="We have sent a verification code to" />

            <TextView
                android:id="@+id/numberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textViewColor"
                android:layout_gravity="center_horizontal"
                android:text="+91-XXX-XXX-XXX" />


                <com.chaos.view.PinView
                    android:id="@+id/OTPPinView"
                    app:itemCount="6"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:itemBackground="@color/materialCardViewColor"
                    android:inputType="number"
                    android:cursorVisible="true"
                    app:hideLineWhenFilled="false"
                    app:itemRadius="10dp"
                    android:textColor="@color/textViewColor"
                    android:layout_marginTop="30dp"
                    style="@style/PinWidget.PinView" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/OTPVerificationButton"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:outlineAmbientShadowColor="@color/textViewColor"
                    android:outlineSpotShadowColor="@color/textViewColor"
                    android:text="Continue"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/textViewColor"
                    android:text="Didn't get the OTP?" />

                <TextView
                    android:id="@+id/resendSMSButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/md_theme_light_primary"
                    android:text="Resend SMS" />

            </LinearLayout>
        </ScrollView>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>